<style type="text/css">
  .small-button{
    margin-top: 0px!important;
    width: 48%;
    margin-bottom: 0px!important;
  }
  .my-warning{
    color: #fff!important;
    background-color: #f0ad4e!important;
    border-color: #eea236!important;
  }
  .my-danger{
    color: #fff!important;
    background-color: #d9534f!important;
    border-color: #d43f3a!important;
  }
  .my-success{
    color: #fff!important;
    background-color: #5cb85c!important;
    border-color: #4cae4c!important;
  }
  .no-padding{
    padding: 0px
  }
  .full-width{
    width: 100%
  }
  .item-price{
    border-left: 1px solid #e6e6e6;
    border-left-width: 1px;
    border-left-style: solid;
    border-left-color: rgb(230, 230, 230);
  }
  .m-b-5{
    border-bottom: 5px!important;
  }
  .explore{
    margin-bottom: 10px;
  }
</style>
<div id="page-content-search">
  <div class="container">
    <div class="wide_container_2">
      <div class="col-xs-12 content_2">
        <div class="col-lg-10 col-lg-offset-1 col-md-12">
          <!-- Range slider -->
          <div class="row">
            <div class="explore col-xs-12">
              <h2>Mis Propiedades</h2>
              <a href="<%= new_property_path %>" class="btn btn-block my-success m-b-5">Agregar propiedad</a>
            </div>
          </div><!-- row -->
          <!-- End Range slider -->
          <div class="wide-2">
            <div class="container">
              <% @properties.each do |property| %>
                <div class="row white" style="display:inherit!important">
                  <div class="col-md-3 col-sm-3 no-padding">
                      <img src="<%= property.foto_principal.photo.url %>" class="full-width" alt="">
                  </div>
                  <div class="item-info col-lg-7 col-md-6 col-sm-6" style="border-right: none!important">
                    <div class="col-md-12">
                      <h4><a href="<%= property_path(property.id) %>"><%= property.titulo %></a></h4>
                      <p class="team-color"><%= property.direccion %></p>
                    </div>

                    <div class="block">
                      <div class="col-md-4 col-sm-4 col-xs-4 cat-img">
                        <img src="/assets/bedroom.png" alt="">
                        <p class="info-line"><%= property.habitaciones %> Habitaciones</p>
                      </div>
                      <div class="col-md-4 col-sm-4 col-xs-4 cat-img">
                        <img src="/assets/bathroom.png" alt="">
                        <p class="info-line"><%= property.banios %> Ba√±o</p>
                      </div>
                      <div class="col-md-4 col-sm-4 col-xs-4 cat-img">
                        <img src="/assets/square.png" alt="">
                        <p class="info-line"><%= property.superficie_construida %> m<span class="rank">2</span></p>
                      </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 line"></div>
                    <div class="col-md-4 col-sm-4 col-xs-4 line"></div>
                    <div class="col-md-4 col-sm-4 col-xs-4 line"></div>
                    <hr>
                    <div class="col-md-12">
                      <p><%= property.descripcion[0..140] %></p>
                    </div>

                  </div>
                  <div class="item-price col-lg-2 col-md-3 col-sm-3 col-xs-12">
                    <div class="sum col-sm-12 col-xs-6">
                      <p><%= money_without_cents_and_with_symbol property.precio %></p>
                      <p class="team-color"><%= property.nombre_operacion %></p>
                    </div>
                    <span class="ffs-bs col-xs-12 btn-half-wth"><a href="<%= property_path(property.id) %>" class="btn btn-default btn-small">Ver <i class="fa fa-caret-right"></i></a></span>
                    <div class="sum favorite col-sm-12 col-xs-6">
                      <a href="#" class="btn btn-xs my-warning small-button"><i class="fa fa-pencil"></i></a>
                      <a href="/properties/delete/<%= property.id %>" class="btn btn-xs my-danger small-button"><i class="fa fa-trash"></i></a>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- end wide-2 -->
        </div>
      </div>
