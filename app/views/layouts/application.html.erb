  <!-- Modal login, register, custom gallery -->
  <div id="modal-login" class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header text-center">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h2>Entra a tu cuenta:</h2>
          <span>Bienvenido a casa!</span>
        </div>
        <form action="<%= user_session_path %>" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <input type="text" name="user[email]" placeholder="Email:" required>
              <span class="fa fa-at"></span>
            </div>
            <div class="form-group">
              <input type="password" name="user[password]" placeholder="Contraseña:" required>
              <span class="fa fa-lock"></span>
            </div>
            <div class="form-group social-login clearfix">
              <a href="/auth/facebook" class="col-md-6 fb-login"><span class="fa fa-facebook-square"></span>Facebook</a>
              <a href="/auth/google_oauth2" class="col-md-6 google-login"><span class="fa fa-google-plus-square"></span>Google</a>
            </div>
          </div>
          <div class="modal-footer">
            <div class="form-group clearfix">
              <span><a href="#" data-toggle="modal" data-target="#modal-register">No tienes cuenta?</a></span><br>
              <span><a href="#">Olvidaste tu contraseña?</a></span>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


